{
    "name": "pyromn/pdf-invoice",
    "description": "Library to generate PDF invoices",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "keywords": ["invoice", "pdf"],
    "support": {
        "source": "https://github.com/pyromn/pdf-invoice"
    },
    "authors": [
        {
            "name": "Attila Fulop",
            "homepage": "https://github.com/fulopattila122"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "ext-mbstring": "*",
        "setasign/tfpdf": "^1.33"
    },
    "require-dev": {
        "phpunit/phpunit": "8 - 9"
    },
    "autoload": {
        "psr-4": { "Pyromn\\PdfInvoice\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Pyromn\\PdfInvoice\\Tests\\": "tests/"
        }
    }
}
